{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2019"
    ],
    "outDir": "dist",
    "paths": {
      "*": [
        "src/*",
        "src/@types/*"
      ]
    },
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "src/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
